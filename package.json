{
  "name": "codextend",
  "displayName": "Codextend",
  "version": "0.0.1",
  "description": "Chrome extension to extend OpenAI Codex cloud functionality",
  "author": "Codextend Contributors",
  "scripts": {
    "predev": "node scripts/generate-icons.mjs",
    "dev": "plasmo dev",
    "prebuild": "node scripts/generate-icons.mjs",
    "build": "plasmo build",
    "zip": "plasmo package",
    "lint": "eslint --max-warnings=0 \"src/**/*.{ts,tsx}\" \"tests/**/*.ts\"",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "plasmo": "^0.90.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webext-bridge": "^5.0.5",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/chrome": "^0.0.258",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^27.0.1",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "sharp": "^0.33.4",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.5.4",
    "typescript-eslint": "^7.16.1",
    "vitest": "^2.0.5"
  },
  "manifest": {
    "host_permissions": [
      "https://chatgpt.com/*",
      "https://chat.openai.com/*"
    ],
    "permissions": [
      "storage",
      "scripting",
      "activeTab"
    ]
  }
}
